<%include header%>
<center>
             <h1><%=post.title%></h1>
            <p>
                <% if( user && user.name == post.name ){  %>
                <span>
        <a class="edit" href="/edit/<%= post.name %>/<%= post.time.minute %>/<%= post.title %>">编辑</a>
    </span>
                <span>
        <a class="edit" href="/remove/<%= post.name %>/<%= post.time.minute %>/<%= post.title %>">删除</a>
    </span>
                <% } %>
            </p>
            <p class="info">
                作者：<a href="/u/<%= post.name %>"><%= post.name %></a> |
                日期：<%= post.time.minute %> |
                标签：
                <% post.tags.forEach(function (tag, index) { %>
                <% if (tag) { %>
                <a class="label label-success" href="/tags/<%= tag %>"><%= tag %></a>
                <% } %>
                <% }) %>
            </p>
            <p class="fs center"><%- post.post %></p>
            <p  class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
            <% include comment %>
</center>

      <%include footer%>


